{
   "name": "react-vite-ssr",
   "version": "1.0.0",
   "scripts": {
      "dev": "nodemon --watch src/server.ts --exec 'pnpm ts-node src/server.ts'",
      "build": "tsc -p tsconfig.prod.json && vite build --outDir dist/client && vite build --outDir dist/server --ssr src/entry-server.tsx",
      "start": "NODE_ENV=production node --experimental-modules dist/server.js"
   },
   "dependencies": {
      "autoprefixer": "^10.3.1",
      "compression": "1.7.4",
      "express": "4.17.1",
      "nodemon": "^2.0.12",
      "react": "^17.0.2",
      "react-dom": "^17.0.2",
      "react-router": "^5.2.0",
      "serve-static": "^1.14.1",
      "ts-node": "^10.1.0"
   },
   "devDependencies": {
      "@types/compression": "1.7.1",
      "@types/node": "16.4.2",
      "@types/react": "^17.0.15",
      "@types/react-dom": "^17.0.9",
      "@vitejs/plugin-react-refresh": "^1.3.5",
      "postcss": "8.3.6",
      "tailwindcss": "3.0.0-alpha.1",
      "typescript": "4.3.5",
      "vite": "2.4.3",
      "vite-plugin-legacy": "^2.1.0"
   }
}
