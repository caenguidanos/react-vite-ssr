{
   "name": "react-vite-ssr",
   "version": "1.0.0",
   "scripts": {
      "dev": "nodemon --watch src/server.ts --exec 'pnpm build:server && pnpm start'",
      "build:server": "node src/lib/ssr/build-server.mjs",
      "build:api": "node src/lib/ssr/build-api.mjs",
      "build:client-entry": "vite build --outDir dist/client --ssrManifest",
      "build:server-entry": "vite build --outDir dist/entry --ssr src/lib/ssr/entry-server.tsx",
      "build": "pnpm build:server && pnpm build:api && pnpm build:client-entry && pnpm build:server-entry",
      "start": "node --experimental-modules dist/server.js",
      "start:prod": "NODE_ENV=production node --experimental-modules dist/server.js"
   },
   "dependencies": {
      "autoprefixer": "^10.3.1",
      "compression": "1.7.4",
      "express": "4.17.1",
      "nodemon": "^2.0.12",
      "react": "^17.0.2",
      "react-dom": "^17.0.2",
      "react-router": "^5.2.0",
      "serve-static": "^1.14.1",
      "ts-node": "^10.1.0"
   },
   "devDependencies": {
      "@types/compression": "1.7.1",
      "@types/node": "16.4.2",
      "@types/react": "^17.0.15",
      "@types/react-dom": "^17.0.9",
      "@vitejs/plugin-react-refresh": "^1.3.5",
      "esbuild": "0.13.8",
      "postcss": "8.3.6",
      "tailwindcss": "3.0.0-alpha.1",
      "tiny-glob": "0.2.9",
      "typescript": "4.3.5",
      "vite": "2.4.3",
      "vite-plugin-legacy": "^2.1.0"
   }
}
