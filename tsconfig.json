{
   "compilerOptions": {
      "allowJs": true,
      "alwaysStrict": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "checkJs": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "useDefineForClassFields": true,
      "incremental": true,
      "isolatedModules": true,
      "jsx": "react-jsxdev",
      "lib": ["dom", "esnext"],
      "strict": true,
      "outDir": "dist",
      "module": "esnext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es2020",
      "types": ["vite/client", "express"],
      "paths": {
         "$ssr/*": ["src/lib/ssr/*"],
         "$styles/*": ["src/styles/*"]
      }
   },
   "include": ["src/**/*"],
   "ts-node": {
      "compilerOptions": {
         "module": "commonjs"
      }
   }
}
