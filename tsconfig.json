{
   "compilerOptions": {
      "allowJs": true,
      "alwaysStrict": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "checkJs": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "useDefineForClassFields": true,
      "incremental": true,
      "isolatedModules": true,
      "jsx": "react-jsxdev",
      "lib": ["DOM", "ESNext"],
      "strict": true,
      "outDir": "dist",
      "module": "esnext",
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "ES2020",
      "types": ["vite/client", "express"]
   },
   "include": ["src/**/*"],
   "ts-node": {
      "compilerOptions": {
         "module": "CommonJS"
      }
   }
}
